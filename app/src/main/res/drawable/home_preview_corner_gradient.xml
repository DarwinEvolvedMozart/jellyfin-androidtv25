<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Left edge fade - black on left fading to transparent on right -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="0"
                android:startColor="#FF000000"
                android:centerColor="#00000000"
                android:endColor="#00000000"
                android:centerX="0.45"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Bottom edge fade - black on bottom fading to transparent on top -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#FF000000"
                android:centerColor="#00000000"
                android:endColor="#00000000"
                android:centerY="0.55"
                android:type="linear" />
        </shape>
    </item>
</layer-list>