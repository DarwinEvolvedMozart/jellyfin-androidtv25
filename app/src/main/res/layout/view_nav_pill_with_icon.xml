<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="48dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingStart="12dp"
    android:paddingEnd="12dp"
    android:background="@drawable/nav_pill_animated_background"
    android:stateListAnimator="@animator/nav_button_state_animator"
    android:focusable="true"
    android:clickable="true">

    <ImageView
        android:id="@+id/nav_pill_icon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginEnd="6dp"
        android:scaleType="centerInside"
        android:tint="@color/nav_text_color"
        android:contentDescription="Library type icon" />

    <TextView
        android:id="@+id/nav_pill_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/nav_text_color"
        android:gravity="center" />

</LinearLayout> 